html,body,.mdl-list__item {
    font-family: "Roboto","Noto Sans TC";
}
.mdl-layout__header--waterfall.is-casting-shadow {
    -webkit-box-shadow: 0 8px 10px 1px rgba(0,0,0,.14),0 3px 14px 2px rgba(0,0,0,.12),0 5px 5px -3px rgba(0,0,0,.2);
    -ms-box-shadow: 0 8px 10px 1px rgba(0,0,0,.14),0 3px 14px 2px rgba(0,0,0,.12),0 5px 5px -3px rgba(0,0,0,.2);
    box-shadow: 0 8px 10px 1px rgba(0,0,0,.14),0 3px 14px 2px rgba(0,0,0,.12),0 5px 5px -3px rgba(0,0,0,.2);
}
#Global_UserAction {
        position: absolute;
    right: 10%;
    bottom: 5%;
    z-index: 3;
}
#Global_LeaveMessage {
     position: absolute;
    right: 10%;
    bottom: 15%;
    z-index: 3;
}
.animated-fab-button {
    -moz-transition: .2s ease all;
    -ms-transition: .2s ease all;
    -o-transition: .2s ease all;
    -webkit-transition: .2s ease all;
    transition: .2s ease all;
}

.animated-fab-button:hover {
    -moz-transform: rotate(225deg);
    -ms-transform: rotate(225deg);
    -o-transform: rotate(225deg);
    -webkit-transform: rotate(225deg);
    transform: rotate(225deg);
    -webkit-box-shadow: -3px -3px 10px rgba(0, 0, 0, .25);
    -ms-box-shadow: -3px -3px 10px rgba(0, 0, 0, .25);
    box-shadow: -3px -3px 10px rgba(0, 0, 0, .25);
}
