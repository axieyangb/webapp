
.customize-mdl-card__player {
    min-height: 210px;
    background: #000 url('../../Imgs/MediaController/play.svg') no-repeat center center;
    background-size: 72px 72px;
    bottom: 0;
    content: '';
    left: 0;
    opacity: 0.5;
    -webkit-transition: opacity 0.2s cubic-bezier(0.4, 0, 0.2, 1);
    -moz-transition: opacity 0.2s cubic-bezier(0.4, 0, 0.2, 1);
    transition: opacity 0.2s cubic-bezier(0.4, 0, 0.2, 1);
    cursor: pointer;
}

.customize-mdl-card__ui-video-player-playing {
    min-height: 210px;
    background: #000 url('../../Imgs/MediaController/pause.svg') no-repeat center center;
    background-size: 72px 72px;
    opacity: 0;
    -webkit-transition: opacity 0.2s cubic-bezier(0.4, 0, 0.2, 1),background 0 ease 0.2s;
    -moz-transition: opacity 0.2s cubic-bezier(0.4, 0, 0.2, 1),background 0 ease 0.2s;
    transition: opacity 0.2s cubic-bezier(0.4, 0, 0.2, 1),background 0 ease 0.2s;
    cursor: pointer;
}

    .customize-mdl-card__ui-video-player-playing:hover {
        opacity: 0.2;
    }

/*.customize-mdl-card__play-btn > button {
