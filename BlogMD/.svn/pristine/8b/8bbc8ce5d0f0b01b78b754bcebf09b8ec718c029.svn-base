.mdl-button--icon .large {
    height: 64px;
    width: 64px;
}

.mediaContainers {
    display: none;
}

.withoutShadow {
    box-shadow: none;
}

    .withoutShadow :selection {
        box-shadow: none;
    }

.playTimeDisplay {
    margin: 0 20px;
}

.mdl-slider__background-middle {
    background: rgb(255, 82, 82);
    opacity: 0.4;
}

.cover {
    position: absolute;
    z-index: -10;
    display: initial;
}

button.fullscreenButton {
    float: right;
    margin-right: 20px;
}
