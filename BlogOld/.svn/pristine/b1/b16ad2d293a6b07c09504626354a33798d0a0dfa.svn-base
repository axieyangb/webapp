body {
  background:#E0F2F1;
}

.wrapper {
  margin-top: 80px;
  margin-bottom: 80px;
}
.well {
    background-color: #E0F2F1;
    border: 0;
    box-shadow: none;
}
.form-signin {
  max-width: 380px;
  padding: 15px 35px 45px;
  margin: 0 auto;
  background-color: white;
}
.form-signin .form-signin-heading,
.form-signin .checkbox {
  margin-bottom: 30px;
}
.form-signin > input[type="checkbox"]{
   color :  #DCE775;
}

span[class="check"] {
    background-color: white;
}
