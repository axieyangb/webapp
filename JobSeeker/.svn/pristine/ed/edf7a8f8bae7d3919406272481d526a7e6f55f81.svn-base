.header {
    width: 100%;
    margin-top: 15px;
    float: right;
    max-height: 40px;
}

.index-pic {
    height: 215px;
    margin-top: 100px;
    width: 100%;
    text-align: -webkit-center;
    margin-bottom: 45px;
}

.index-pic>img {
    height: 100%;
    width: 100%;
    max-width: 461px;
    max-height: 215px;
}

.searchBox {
    max-width: 600px;
    float: none;
    margin: 0 auto;
}

.glyphicon {
    top: 0px;
}

.signinBtn {
    float: inherit;
    border-bottom-left-radius: 0;
    border-bottom-right-radius: 0;
    border-top-left-radius: 0;
    border-top-right-radius: 0;
}

.showMore {
    float: inherit;
    cursor: pointer;
    margin: 10px 30px 10px 10px;
    align-items: center;
}

.profile-img>img {
    float: inherit;
    width: inherit;
    height: inherit;
    -moz-border-radius: 50%;
    -webkit-border-radius: 50%;
    border-radius: 50%;
    align-items: center;
}

.profile-img {
    float: inherit;
    margin: 0px 30px 0px 10px;
    height: inherit;
    width: 40px;
}

.dropdown {
    float: inherit;
}

.dropdown-item {
    display: block;
    width: 100%;
    padding: 3px 1.5rem;
    clear: both;
    font-weight: 400;
    text-align: inherit;
    white-space: nowrap;
    background: 0 0;
    border: 0;
}

.dropdown-menu {
    position: absolute;
    top: 100%;
    left: -130;
    z-index: 1000;
    float: left;
    background-color: #fff;
    -webkit-background-clip: padding-box;
    background-clip: padding-box;
    border: 1px solid rgba(0, 0, 0, .15);
}
.cursor-pointer{
    cursor: pointer;
}