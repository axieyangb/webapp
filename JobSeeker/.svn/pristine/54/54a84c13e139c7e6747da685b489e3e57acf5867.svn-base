.header {
    width: 100%;
    margin-top: 15px;
    float: right;
}

.index-pic {
    height: 215px;
    margin-top: 100px;
    width: 100%;
    text-align: -webkit-center;
    margin-bottom: 45px;
}

.index-pic>img {
    height: 100%;
    width: 100%;
    max-width: 461px;
    max-height: 215px;
}

.searchBox {
    max-width: 600px;
    float: none;
    margin: 0 auto;
}

.glyphicon {
    top: 0px;
}

.signinBtn {
    float: inherit;
    border-bottom-left-radius: 0;
    border-bottom-right-radius: 0;
    border-top-left-radius: 0;
    border-top-right-radius: 0;
}

.showMore {
    float: inherit;
    cursor: pointer;
    margin: 10px 30px 10px 10px;
    align-items: center;
}